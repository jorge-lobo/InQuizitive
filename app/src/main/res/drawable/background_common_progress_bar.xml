<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Background -->
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_extra_small" />
            <solid android:color="@color/progress_bar_bg" />
            <stroke
                android:width="1dp"
                android:color="@color/progress_bar_stroke" />
        </shape>
    </item>
    <!-- Progress Bar -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/corner_extra_small" />
                <solid android:color="@color/progress_bar_progress" />
            </shape>
        </clip>
    </item>
</layer-list>