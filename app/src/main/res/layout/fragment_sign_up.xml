<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.inquizitive.ui.auth.signUp.SignUpViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_small"
        tools:background="@drawable/background_gradient"
        tools:context=".ui.auth.signUp.SignUpFragment">

        <RelativeLayout
            android:id="@+id/rl_sign_up_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_medium"
            android:background="@drawable/background_common_header"
            android:padding="@dimen/margin_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_sign_up_title"
                style="@style/textPrimaryLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/header_title_sign_up"
                android:textSize="@dimen/txt_title"
                tools:ignore="RelativeOverlap" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_sign_up_avatar_container"
                android:layout_width="@dimen/avatar_large"
                android:layout_height="@dimen/avatar_large"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                app:cardCornerRadius="@dimen/corner_medium">

                <include
                    android:id="@+id/iv_sign_up_avatar"
                    layout="@layout/common_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_sign_up_message"
                style="@style/textPrimaryHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/margin_medium"
                android:text="@string/header_message_avatar"
                android:textSize="@dimen/txt_secondary_text" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_label_username"
            style="@style/textPrimaryLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_big"
            android:layout_marginBottom="@dimen/margin_small"
            android:gravity="start"
            android:text="@string/auth_username"
            android:textSize="@dimen/txt_secondary_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rl_sign_up_header" />

        <LinearLayout
            android:id="@+id/ll_sign_up_input_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_primary"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_extra_small"
            android:background="@drawable/background_common_rectangular_normal"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/margin_small_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_label_username">

            <FrameLayout
                android:id="@+id/fl_left_box_username"
                android:layout_width="@dimen/small_box_container"
                android:layout_height="@dimen/small_box_container"
                android:background="@drawable/background_common_square_normal">

                <ImageView
                    android:id="@+id/iv_sign_up_icon_user"
                    android:layout_width="@dimen/icon_input"
                    android:layout_height="@dimen/icon_input"
                    android:layout_gravity="center"
                    android:contentDescription="@string/description_icon"
                    android:src="@drawable/ic_svg_user"
                    app:tint="@color/icon_primary" />

            </FrameLayout>

            <EditText
                android:id="@+id/et_sign_up_input_username"
                style="@style/form_input_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_extra_small"
                android:autofillHints=""
                android:background="@drawable/background_common_edit_text"
                android:hint="@string/auth_hint_username_sign_up"
                android:inputType="text" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_label_password"
            style="@style/textPrimaryLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_big"
            android:layout_marginBottom="@dimen/margin_small"
            android:gravity="start"
            android:text="@string/auth_password"
            android:textSize="@dimen/txt_secondary_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_sign_up_input_username" />

        <RelativeLayout
            android:id="@+id/rl_sign_up_input_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_primary"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_extra_small"
            android:background="@drawable/background_common_rectangular_normal"
            android:paddingTop="@dimen/margin_small_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_label_password">

            <FrameLayout
                android:id="@+id/fl_left_box_password"
                android:layout_width="@dimen/small_box_container"
                android:layout_height="@dimen/small_box_container"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/background_common_square_normal">

                <ImageView
                    android:id="@+id/iv_sign_up_icon_password"
                    android:layout_width="@dimen/icon_input"
                    android:layout_height="@dimen/icon_input"
                    android:layout_gravity="center"
                    android:contentDescription="@string/description_icon"
                    android:src="@drawable/ic_svg_lock"
                    app:tint="@color/icon_primary" />

            </FrameLayout>

            <EditText
                android:id="@+id/et_sign_up_input_password"
                style="@style/form_input_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="40dp"
                android:autofillHints=""
                android:background="@drawable/background_common_edit_text"
                android:hint="@string/auth_hint_password_sign_up"
                android:inputType="textPassword" />

            <FrameLayout
                android:id="@+id/fl_right_box_sign_up_password"
                android:layout_width="@dimen/small_box_container"
                android:layout_height="@dimen/small_box_container"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/background_common_square_normal">

                <ImageView
                    android:id="@+id/iv_sign_up_password_icon_view"
                    android:layout_width="@dimen/icon_input"
                    android:layout_height="@dimen/icon_input"
                    android:layout_gravity="center"
                    android:contentDescription="@string/description_icon"
                    android:src="@drawable/ic_svg_eye_view"
                    app:tint="@color/icon_primary" />

            </FrameLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sign_up_input_confirmation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_primary"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@drawable/background_common_rectangular_normal"
            android:paddingTop="@dimen/margin_small_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rl_sign_up_input_password">

            <FrameLayout
                android:id="@+id/fl_left_box_confirmation"
                android:layout_width="@dimen/small_box_container"
                android:layout_height="@dimen/small_box_container"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/background_common_square_normal">

                <ImageView
                    android:id="@+id/iv_sign_up_icon_confirmation"
                    android:layout_width="@dimen/icon_input"
                    android:layout_height="@dimen/icon_input"
                    android:layout_gravity="center"
                    android:contentDescription="@string/description_icon"
                    android:src="@drawable/ic_svg_lock"
                    app:tint="@color/icon_primary" />

            </FrameLayout>

            <EditText
                android:id="@+id/et_sign_up_input_confirmation"
                style="@style/form_input_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="40dp"
                android:autofillHints=""
                android:background="@drawable/background_common_edit_text"
                android:hint="@string/auth_hint_confirm_password_sign_up"
                android:inputType="textPassword" />

            <FrameLayout
                android:id="@+id/fl_right_box_sign_up_confirmation"
                android:layout_width="@dimen/small_box_container"
                android:layout_height="@dimen/small_box_container"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/background_common_square_normal">

                <ImageView
                    android:id="@+id/iv_sign_up_confirmation_icon_view"
                    android:layout_width="@dimen/icon_input"
                    android:layout_height="@dimen/icon_input"
                    android:layout_gravity="center"
                    android:contentDescription="@string/description_icon"
                    android:src="@drawable/ic_svg_eye_view"
                    app:tint="@color/icon_primary" />

            </FrameLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_sig_up_cb_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rl_sign_up_input_confirmation">

            <CheckBox
                android:id="@+id/cb_sign_up_remember_me"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/check_box"
                android:buttonTint="@color/checkbox_color_selector"
                android:checked="false" />

            <TextView
                android:id="@+id/tv_label_logged"
                style="@style/textPrimaryLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_extra_small"
                android:gravity="start"
                android:text="@string/auth_logged"
                android:textSize="@dimen/txt_secondary_text" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_sign_up_reset"
            style="@style/buttonTransparent"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:enabled="false"
            android:gravity="end"
            android:text="@string/button_reset"
            android:textColor="@color/button_text_selector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rl_sign_up_input_confirmation" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>